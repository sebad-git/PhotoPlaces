<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/gradient_background"
    tools:context=".ui.activities.CreateLocationActivity">

    <LinearLayout
        android:id="@+id/cp_container"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent" android:weightSum="1"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_take_picure"
            android:id="@+id/cp_picture"
            android:background="@drawable/image_selector"
            android:layout_width="160dp"
            android:padding="8dp"
            android:layout_marginBottom="50dp"
            android:layout_height="160dp" />

        <EditText
            style="@style/AppTheme.EditText"
            android:layout_width="match_parent"
            android:id="@+id/cp_name"
            android:hint="@string/place_name"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <EditText
            style="@style/AppTheme.EditText"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:id="@+id/cu_descripcion"
            android:hint="@string/place_description"
            android:lines="9"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/cu_btn_cancel"
                android:layout_width="80dp"
                android:layout_marginRight="30dp"
                android:alpha="0.9"
                android:src="@drawable/ic_cancel"
                android:background="@drawable/round_button_selector"
                android:layout_height="80dp"/>

            <ImageView
                android:id="@+id/cp_btn_save"
                android:layout_width="80dp"
                android:alpha="0.9"
                android:src="@drawable/ic_ok"
                android:background="@drawable/round_button_selector"
                android:layout_height="80dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>