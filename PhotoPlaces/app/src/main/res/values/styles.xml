<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/cairo</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textAppearance">@style/AppTheme.DialogText</item>
        <item name="android:buttonBarButtonStyle">@style/AppTheme.DialogButtons</item>
        <item name="android:textColor">@color/colorFont</item>
    </style>

    <style name="AppTheme.DialogText" >
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/titillium</item>
        <item name="android:textColor">@color/colorFont</item>
    </style>

    <style name="AppTheme.DialogButtons" >
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/titillium</item>
    </style>

    <style name="AppTheme.EditText" >
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorHint">@color/colorFont</item>
        <item name="android:textSize" >17dp</item>
        <item name="android:fontFamily">@font/titillium</item>
        <item name="android:background">@drawable/input_selector</item>

    </style>


</resources>
